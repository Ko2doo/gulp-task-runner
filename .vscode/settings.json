{
  "editor.fontSize": 11,
  "editor.minimap.enabled": false,
  "editor.tabSize": 2,
  "breadcrumbs.enabled": true,
  "editor.formatOnSave": true,
  "editor.linkedEditing": true,
  // Настройки Prettier
  "prettier.trailingComma": "all",
  "prettier.semi": true,
  "prettier.printWidth": 100,
  "prettier.useEditorConfig": true,
  // Настройки ESLint
  "eslint.packageManager": "npm",
  "eslint.format.enable": true,
  "emmet.triggerExpansionOnTab": true,
  // Если шрифт поддерживает стрелочки и т.п. знаки, то включить их (лигатуры)
  "editor.fontLigatures": true,
  // Тип курсора
  "editor.cursorStyle": "line",
  "workbench.colorTheme": "Atom One Dark",
  "workbench.sideBar.location": "right",
  "workbench.iconTheme": "eq-material-theme-icons-palenight",
  "workbench.productIconTheme": "fluent-icons",
  "explorer.confirmDelete": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "files.associations": {
    "*.html": "njk"
  },
  "emmet.includeLanguages": {
    "njk": "html"
  },
  "cssPeek.peekFromLanguages": [
    "html",
    "django-html",
    "laravel-blade",
    "razor",
    "vue",
    "blade",
    "pug",
    "jade",
    "handlebars",
    "php",
    "twig",
    "md",
    "nunjucks",
    "javascript",
    "javascriptreact",
    "erb",
    "typescript",
    "typescriptreact",
    "HTML (Eex)",
    "html-eex",
    "ejs",
    "njk"
  ],
  "[njk]": {
    "editor.defaultFormatter": "eseom.nunjucks-template"
  },
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "stylelint.snippet": ["css", "less", "postcss", "scss", "sass"],
  "stylelint.validate": ["css", "less", "postcss", "scss", "sass"],
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[sass]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
